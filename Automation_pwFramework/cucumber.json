{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "publishQuiet": true,
        "dryRun": false,
        "timeout": 60000,
        "paths": [
            "src/test/features/"
        ],
        "require": [
            "src/hooks/*.ts",
            "src/test/steps/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "json:test-results/json/cucumber-report.json",
            "html:test-results/cucumber-report.html",
            "allure-cucumberjs/reporter"
        ]
    }
}